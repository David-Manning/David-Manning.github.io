&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>df &lt;span style="color:#f92672">&amp;lt;-&lt;/span> readr&lt;span style="color:#f92672">::&lt;/span>&lt;span style="color:#a6e22e">read_csv&lt;/span>(file &lt;span style="color:#f92672">=&lt;/span> &lt;span style="color:#e6db74">&amp;#34;/home/david/Documents/Temp/test.csv&amp;#34;&lt;/span>)
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>readr&lt;span style="color:#f92672">::&lt;/span>&lt;span style="color:#a6e22e">write_csv&lt;/span>(x &lt;span style="color:#f92672">=&lt;/span> df, file &lt;span style="color:#f92672">=&lt;/span> &lt;span style="color:#e6db74">&amp;#34;/home/david/Documents/Temp/test.csv&amp;#34;&lt;/span>)
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#75715e"># data.table&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#a6e22e">library&lt;/span>(data.table)
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>df &lt;span style="color:#f92672">&amp;lt;-&lt;/span> data.table&lt;span style="color:#f92672">::&lt;/span> &lt;span style="color:#a6e22e">fread&lt;/span>(file &lt;span style="color:#f92672">=&lt;/span> &lt;span style="color:#e6db74">&amp;#34;/home/david/Documents/Temp/test.csv&amp;#34;&lt;/span>)
